<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="true">

    <!--
        LOGBACK CONFIGURATION FOR SPLUNK INTEGRATION
        - Produces logs in JSON format for easy Splunk ingestion
        - File name is parameterized by application name (APP_NAME env/property)
        - Console and file appenders are both available
        - All key fields are included for traceability
    -->

    <!-- Application name property (resolved from Spring's spring.application.name) -->
    <property name="APP_NAME" value="${spring.application.name:-application}"/>
    <property name="LOG_PATH" value="./logs" />
    <property name="LOG_FILE_NAME" value="${APP_NAME}" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] [%X{correlationId}] [%X{userId}] [%X{company}] %-5level %logger{36} - %msg%n"/>

    <!-- JSON encoder for Splunk compatibility -->
    <appender name="SPLUNK_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.json</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!--
                LogstashEncoder produces JSON logs compatible with Splunk
                You can add custom fields as needed
            -->
            <customFields>{"app":"${APP_NAME}"}</customFields>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>company</includeMdcKeyName>
            <includeMdcKeyName>email</includeMdcKeyName>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Console appender (plain text, for local dev) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root logger: logs to both console and Splunk JSON file -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SPLUNK_FILE" />
    </root>

    <!-- Example: Specific logging for your codebase (DEBUG level) -->
    <logger name="raff.stein" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SPLUNK_FILE" />
    </logger>

</configuration>
